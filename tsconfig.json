{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "strict": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "incremental": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-strict-plugin",
        "paths": [
          "src"
        ]
      }
    ]
  },
  "exclude": ["node_modules", "dist"]
}
